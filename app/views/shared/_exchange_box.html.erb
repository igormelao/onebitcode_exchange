<div class="exchange_box">
  <div class="card">
    <div class="card-header text-center">Simule sua convers√£o</div>
    <div class="card-block">
      <%= form_tag("/exchange", method: "post", id: "exchange_form") do %>
        <div class="form-group">
          <p class="title">Moeda Pretendida</p>
          <%= select_tag "currency", options_for_select(currency_select, "BRL"), class: "form-control", id: "currency" %>
        </div>
        <div class="form-group">
          <input type="number" id="quantity" class="form-control" name="quantity" placeholder="Quantidade" step="any" required>
        </div>
        <div class="destination_currency">
          <div class="form-group">
            <p class="title">Moeda Pretendida</p>
            <%= select_tag "currency_destination", options_for_select(currency_select,"EUR"),class: "form-control", id: "currency_destination" %>
          </div>
          <div class="form-group">
            <input type="text" id="result" class="form-control" name="result" placeholder="Resultado" readonly>
          </div>
        </div>
        <div>
          <button class="btn btn-primary btn-exchange col-md12" type="submit">CONVERTER</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
